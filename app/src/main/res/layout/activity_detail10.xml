<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity10">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="45dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_marginTop="40dp"
                android:layout_marginLeft="70dp"
                android:id="@+id/txtPizza1"
                android:textColor="@color/Red"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P10.MARGHERITA PIZZA"/>


            <TextView
                android:layout_below="@id/txtPizza1"
                android:id="@+id/txtPizza2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:textColor="@color/lavender"
                android:textSize="20sp"
                android:text="Thành phần"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_below="@id/txtPizza2"
                android:id="@+id/txtPizza3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="Cà chua, nhiều pho mai Mozzarella, sốt cà chua, pho mai."/>

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_below="@id/txtPizza3"
                android:id="@+id/txtPizza4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/lavender"
                android:textSize="20sp"
                android:text="Kích cỡ / Giá"/>

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_below="@id/txtPizza4"
                android:id="@+id/txtPizza5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="Size S / 20cm / 90.000đ"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_below="@id/txtPizza5"
                android:id="@+id/txtPizza6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="Size M / 24cm / 120.000đ"/>

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_below="@id/txtPizza6"
                android:id="@+id/txtPizza7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="Size L / 29cm / 150.000đ"/>

            <ImageView
                android:id="@+id/imagePizza1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/txtPizza7"
                android:layout_marginStart="80dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/pizza10"
                android:layout_marginBottom="24dp" />

            <Button
                android:layout_below="@+id/imagePizza1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Mua hàng"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>